@model IEnumerable<ProjectManager.Models.DeveloperListElement>

<script type="text/javascript">

    $(document).ready(function () {
        //Adjust height of overlay to fill screen when page loads
        $("#fuzz").css("height", $(document).height());

        $("#addDeveloperDialog").click(function (event) {
            $('#overlaywindow').load('/Projects/AddDeveloperDialog/' + @ViewData["projectId"]);
            $("#fuzz").fadeIn();
            return false;
        });

        //When the message box is closed, fade out
        $(".close").click(function () {
            $("#fuzz").fadeOut();
            return false;
        });
    })
</script>

@{
    if ((ViewData["isLeader"] as string).Equals("Leader"))
    {
        <input type="button" id="addDeveloperDialog" value="Add developer" /><br />
    }
}

@foreach (var item in Model)
{
    <div class="task-element">
        <p class="project-title">@item.ProjectUser.UserName</p>
        <p>
            Work hours on project: @item.WorkHours <br />
            Tasks done: @item.TasksDone <br />
            Assigned tasks: @item.AssignedTasks
        </p>
    </div>
}