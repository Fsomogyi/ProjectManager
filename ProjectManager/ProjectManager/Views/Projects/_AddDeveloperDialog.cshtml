@model ProjectManager.Models.AddDeveloperDialogModel

@if (Model.AddableDevelopers.Count > 0)
{
   using (Html.BeginForm("AddDeveloper", "Projects", FormMethod.Post))
   {
    <fieldset>
        <legend>Add developer</legend>

        <select name="addUserId" class="select-user">
            @foreach (var item in Model.AddableDevelopers)
            {
                <option value="@item.Id">@item.UserName</option>
            }
        </select>

        <input type="hidden" name="projectId" value="@Model.ProjectId" />
        <input class="action-button-small" type="submit" id="addDeveloper" value="Add developer" />

    </fieldset>
   }
}



@if (Model.RemovableDevelopers.Count > 0)
{
    using (Html.BeginForm("RemoveDeveloper", "Projects", FormMethod.Post))
    {
        
        if (Model.AddableDevelopers.Count > 0)
        {
            <hr style="border-top:1px solid black;" />
        }

        <fieldset>
            <legend>Remove developer</legend>

            <select name="removeUserId" class="select-user">
                @foreach (var item in Model.RemovableDevelopers)
                {
                    <option value=@item.Id>@item.UserName</option>
                }
            </select>

            <input type="hidden" name="projectId" value="@Model.ProjectId" />
            <input class="action-button-small" type="submit" id="removeDeveloper" value="Remove developer" />

        </fieldset>
    }
}