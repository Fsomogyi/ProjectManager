@{
    ViewBag.Title = "Project Manager";
}

@if (!Request.IsAuthenticated)
{
    <div style="margin-left: auto; margin-right: auto; text-align: center;">
        <h1>@ViewBag.Title</h1>
    </div>


    <div class="row">
        @Html.Action("Login", "Account") 
    </div>

    <hr style="border-top:1px solid black;"/>

    <div class="row">
        @Html.Action("Register", "Account") 
    </div>
}
else
{
    <h1>Ide jön a projekt nézet</h1>
}

<style type="text/css">
    .row { clear: both; width: 100%; overflow: hidden; margin: 5px 0; } 
    .label { float: left; text-align: right; margin-right: 10px; width: 150px; } 
    .value { float: left; text-align: left; } 
</style> 