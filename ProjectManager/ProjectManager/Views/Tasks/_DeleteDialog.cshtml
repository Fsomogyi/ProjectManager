@model BusinessLogicLayer.Task

@using (Html.BeginForm("DeleteTask", "Tasks", new { taskId = Model.Id }, FormMethod.Post))
{
    <h3>Delete task</h3>
    <h4>Reason:</h4>
    <textarea style="width: 100%" name="deleteDescription" rows="4" />
    <hr style="border-top:2px solid black;" />
    <button type="submit" class="action-button" style="display: block; margin: 0 auto; margin-top: 25px">Delete task</button>
}