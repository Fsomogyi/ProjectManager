@model BusinessLogicLayer.Task


@using (Html.BeginForm("FinishTask", "Tasks", new { taskId = Model.Id }, FormMethod.Post))
{
    <h3>Finish task</h3>
    <h4>Reason:</h4>
    <textarea style="width: 100%" name="finishReason" rows="4" />
    <hr style="border-top:2px solid black;" />
    <button type="submit" class="action-button" style="display: block; margin: 0 auto; margin-top: 25px">Finish</button>
}